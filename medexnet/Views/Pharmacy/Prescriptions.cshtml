@model List<medexnet.Models.PatientPrescriptions>

@{
    Layout = "~/Views/Shared/PharmacyLayout.cshtml";
}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Prescriptions</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Patient Id</th>
                                <th>Doctor Id</th>
                                <th>Prescription Id</th>
                                <th>Name</th>
                                <th>Dosage</th>
                                <th>Pill Count</th>                               
                                <th>DatePrescribed</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.patientFID)</td>
                                <td>@Html.DisplayFor(modelItem => item.doctorFID)</td>
                                <td>@Html.DisplayFor(modelItem => item.prescriptionFID)</td>
                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                <td>@Html.DisplayFor(modelItem => item.dosage)</td>
                                <td>@Html.DisplayFor(modelItem => item.pillCount)</td>
                                <td>@Html.DisplayFor(modelItem => item.datePrescribed)</td>
                            </tr>
                            }                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Patient Id</th>
                                <th>Doctor Id</th>
                                <th>Prescription Id</th>
                                <th>Name</th>
                                <th>Dosage</th>
                                <th>Pill Count</th>
                                <th>DatePrescribed</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
