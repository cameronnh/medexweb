@model medexnet.Models.UserModel

@{
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">@Html.DisplayFor(modelItem => Model.fName)</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => Model.myChats[0].topic)</h4>
                        <div class="chat-box scrollable" style="height:475px;">
                            <!--chat Row -->
                            <ul class="chat-list">
                                <!--chat Row -->
                                @foreach (medexnet.Models.Message M in Model.getChat(Model.Id, Model.currentChatID).messageList)
                                {
                                    if (M.userID != Model.Id)
                                    {
                                        <li class="chat-item">
                                            <div class="chat-img"><img src="../../assets/images/users/1.jpg" alt="user"></div>
                                            <div class="chat-content">
                                                <h6 class="font-medium">@Html.DisplayFor(modelItem => M.user)</h6>
                                                <div class="box bg-light-info">@Html.DisplayFor(modelItem => M.text)</div>
                                            </div>
                                            <div class="chat-time">@Html.DisplayFor(modelItem => M.time)</div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="odd chat-item">
                                            <div class="chat-content">
                                                <h6 class="font-medium">@Html.DisplayFor(modelItem => M.user)</h6>
                                                <div class="box bg-light-info">@Html.DisplayFor(modelItem => M.text)</div>
                                            </div>
                                            <div class="chat-time">@Html.DisplayFor(modelItem => M.time)</div>
                                        </li>
                                    }

                                }
                            </ul>
                        </div>
                    </div>
                    <div class="card-body border-top">
                        <div class="row">
                            <div class="col-9">
                                <div class="input-field m-t-0 m-b-0">
                                    <textarea id="newMessage" placeholder="Type and enter" class="form-control border-0"></textarea>
                                </div>
                            </div>
                            <div class="col-3">
                                <a class="btn-circle btn-lg btn-cyan float-right text-white" id="sendBtn"><i class="fas fa-paper-plane"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


